{
    "name": "note-mgr-cli",
    "version": "0.0.1",
    "description": "A CLI for managing drafts, ideas, and notes",
    "main": "index.js",
    "bin": {
        "nom": "index.js"
    },
    "scripts": {
        "lint:check": "prettier --config .prettierrc.js --check 'src/**/*{.ts, .js}'",
        "lint:fix": "prettier --config .prettierrc.js --write 'src/**/*{.ts, .js}' ",
        "start": "node index.js --help",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "build": "rimraf build && npm run build:types && npm run build:js",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline"
    },
    "author": "Stephen Weiss <stephen.c.weiss@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.10.5",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@types/lodash.kebabcase": "^4.1.6",
        "@types/commander": "^2.12.2",
        "@types/inquirer": "^7.3.1",
        "@types/node": "^14.0.24",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "build": "^0.1.4",
        "chalk": "^4.1.0",
        "commander": "^6.0.0",
        "dayjs": "^1.8.31",
        "dotenv": "^8.2.0",
        "gray-matter": "^4.0.2",
        "inquirer": "^7.3.2",
        "inquirer-fuzzy-path": "^2.3.0",
        "lodash.kebabcase": "^4.1.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*": [
            "yarn lint:fix"
        ]
    }
}
